<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradhome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="331dp"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal"
                android:padding="1dp"
                android:src="@drawable/logo_clr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spy Me"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#00BBF0"
                android:textSize="45dp"
                android:textStyle="bold"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#61C0BF" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFE121" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure is A Must"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#78FEE0"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle=""
                android:background="@drawable/btncoklat"
                android:text="Login"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:id="@+id/btnAMasuk"


                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnoranye"
                android:text="Sign Up"
                android:layout_gravity="center_horizontal"

                android:textColor="#000"
                android:textAllCaps="false"
                android:textSize="18dp"

                android:clickable="true"
                android:padding="2dp"
                android:id="@+id/btnADaftar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
